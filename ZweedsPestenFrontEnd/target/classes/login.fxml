<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="200.0" prefWidth="225.0" xmlns="http://javafx.com/javafx/" xmlns:fx="http://javafx.com/fxml/" fx:controller="frontend.controllers.LoginController">
   <children>
      <Label layoutX="38.0" layoutY="33.0" text="Gebruikersnaam" />
      <TextField id="tbUserName" fx:id="tfUsername" layoutX="38.0" layoutY="50.0" />
      <PasswordField id="tbPassword" fx:id="pfPassword" layoutX="38.0" layoutY="100.0" />
      <Label layoutX="38.0" layoutY="83.0" text="Wachtwoord" />
      <Button id="btnLogin" fx:id="btnLogin" layoutX="141.0" layoutY="142.0" mnemonicParsing="false" onAction="#processBtnLoginClicked" text="Login">
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor>
      </Button>
      <Button id="btnRegister" fx:id="btnRegister" layoutX="40.0" layoutY="142.0" mnemonicParsing="false" onAction="#processBtnRegisterClicked" text="Registreer">
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor>
      </Button>
   </children>
</AnchorPane>
